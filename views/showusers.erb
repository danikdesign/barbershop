<h2>Список записей в Barber Shop</h2>
<table class="table table-striped">

  <thead>
  <tr>
    <th scope="col">Имя клиента</th>
    <th scope="col">Телефон</th>
    <th scope="col">Дата записи</th>
    <th scope="col">Барбер</th>
    <th scope="col">Цвет окрашивания</th>
  </tr>
  </thead>

  <tbody>
    <% @results.each do |row| %>
      <tr>
        <td><%= row['username'] %></td>
        <td><%= row['phone'] %></td>
        <td><%= row['datestamp'] %></td>
        <td><%= row['barber'] %></td>
        <td><%= row['color'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>